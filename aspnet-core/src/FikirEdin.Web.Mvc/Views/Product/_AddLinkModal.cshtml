@using Abp.Authorization.Users
@using FikirEdin.Web.Models.Common.Modals

@{
    Layout = null;
}

<script src="https://cdn.ckeditor.com/4.15.1/full/ckeditor.js"></script>
<div class="modal fade" id="ProductAddLink" tabindex="-1" role="dialog" aria-labelledby="ProductAddLinkLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewLink")))
            <form name="blogCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                   <input type="hidden" name="Id" value="@Model.ProductCategory.Id" />
                    <div class="tab-content mt-4">
                        <div role="tabpanel" class="tab-pane container active" id="create-blog">
                            
                            
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("LinkName")</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="productName" required maxlength="25" minlength="2" placeholder="Maximum 65 karakter">
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("Link")</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="productName" required minlength="2" placeholder="Maximum 65 karakter">
                                </div>
                            </div>
                            
                             
                  
                             
                            

                            
                        </div>
                        
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
               

            </form>
        </div>
    </div>
</div>
