@using FikirEdin.Web.Startup
@using FikirEdin.Web.Models.Product
@model EditProductModalViewModal
@{
    ViewBag.Title = L("Product");
    ViewBag.CurrentPageName = PageNames.Product;
}
@section scripts
{
       @* <script src="~/view-resources/Views/Product/Index.js" asp-append-version="true"></script>*@
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>Ürün Satış Linki Ekle</h1>
            </div>
            
        </div>
    </div>
</section>

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <h4>@L("Product") : @Model.Product.Category.categoryName @Model.Product.productName Satış Linki Ekle</h4>
            </div>
                
            
               
                   
                     

        </div>
    </div>
</section>
<div class="container-fluid">
       
                <form name="blogCreateForm" method="post">
                     <div class="row" >
                        <div class="col-lg-1">
                            <h5> Mağaza Adı</h5>
                        </div>
                        <div class="col-lg-3">
                            <input type="hidden" value="@Model.Product.Id" name="productId"/>
                            <input type="text" required name="shoppingCentre" class="form-control"/>
                        </div>
                        <div class="col-lg-1">
                            <h5>Satış Linki </h5>
                        </div>
                        <div class="col-lg-3">
                            <input type="text" required name="salesLink" class="form-control" />
                        </div>
                        <div class="col-lg-1">
                            <h5>Button Rengi</h5>
                        </div>
                        <div class="col-lg-2">
                            <input type="text" required name="buttonColor" class="form-control"/>
                        </div>
                        <div class="col-lg-1">
                           <input type="submit" value="Ekle" class="btn btn-success"/>
                        </div>
                        </div>                     
                </form>       
    </div>
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>Satış Linkleri</h1>
            </div>
            
        </div>
    </div>
</section>