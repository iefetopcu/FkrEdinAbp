@using Abp.Authorization.Users
@using FikirEdin.Web.Models.Common.Modals
@using FikirEdin.Web.Models.Product
@model ProductViewModel
@{
    Layout = null;
}
<div class="modal fade" id="productCategoryCreateModal" tabindex="-1" role="dialog" aria-labelledby="ProductCategoryCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewProductCategory")))
            <form name="productCategoryCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                   
                    <div class="tab-content mt-4">
                        <div role="tabpanel" class="tab-pane container active" id="create-productCategory">                         
                            
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("ParentCategory")</label>
                                <div class="col-md-9">
                                    <select class="form-control" name="parentId" required>
                                        <option value="0" selected>Üst Kategori</option>
                                        @foreach(var item in Model.Categories)
                                        {
                                            <option value="@item.Id">@item.categoryName</option>                                            
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("CategoryName")</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="categoryName" required maxlength="65" minlength="2" placeholder="Maximum 65 karakter">
                                </div>
                            </div>

                            
                        </div>
                        
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
